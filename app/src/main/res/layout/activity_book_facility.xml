<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smu.residencemanagement.BookFacility">

    <Button
        android:id="@+id/buttonKitchen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="75dp"
        android:onClick="bookOnClick"
        android:text="Kitchen"
        app:layout_constraintEnd_toStartOf="@+id/buttonBathroom"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBookFacility" />

    <Button
        android:id="@+id/buttonBathroom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="75dp"
        android:onClick="bookOnClick"
        android:text="Bathroom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonKitchen"
        app:layout_constraintTop_toBottomOf="@+id/textViewBookFacility" />

    <Button
        android:id="@+id/buttonGym"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:onClick="bookOnClick"
        android:text="Gym"
        app:layout_constraintEnd_toStartOf="@+id/buttonWasher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonKitchen" />

    <Button
        android:id="@+id/buttonWasher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:onClick="bookOnClick"
        android:text="Washer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonGym"
        app:layout_constraintTop_toBottomOf="@+id/buttonBathroom" />

    <Button
        android:id="@+id/buttonDryer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:onClick="bookOnClick"
        android:text="Dryer"
        app:layout_constraintEnd_toStartOf="@+id/buttonCommonRoom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGym" />

    <Button
        android:id="@+id/buttonCommonRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:onClick="bookOnClick"
        android:text="Common Room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonDryer"
        app:layout_constraintTop_toBottomOf="@+id/buttonWasher" />

    <Button
        android:id="@+id/buttonStudyRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:onClick="bookOnClick"
        android:text="Study Room"
        app:layout_constraintEnd_toStartOf="@+id/buttonPlayRoom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDryer" />

    <Button
        android:id="@+id/buttonPlayRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:onClick="bookOnClick"
        android:text="Play Room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonStudyRoom"
        app:layout_constraintTop_toBottomOf="@+id/buttonCommonRoom" />

    <TextView
        android:id="@+id/textViewBookFacility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Book a Facility"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>